{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "3FUI-Studios Project Submission (Minimal)",
  "type": "object",
  "required": ["basic", "meta", "source", "download"],
  "properties": {
    "basic": {
      "type": "object",
      "required": ["title", "description", "tags"],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "tags": { 
          "type": "array", 
          "items": { "type": "string" }
        }
      }
    },
    "meta": {
      "type": "object",
      "required": ["author"],
      "properties": {
        "author": { "type": "string", "minLength": 1 }
      }
    },
    "source": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": { "type": "string", "format": "uri" }
      }
    },
    "download": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": { "type": "string", "format": "uri" }
      }
    }
  }
}
